@model DMD.BL.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h1 {
        text-align: center;
        font-size: 24px;
    }

    .container {
        margin: 0;
        padding: 0;
    }

    .bannerImage {
        width: 100vw;
        height: 750px;
        background-image: url('../../img/supersynth.jpg');
        background-size: cover;
    }

    .custom-row {
        height: 750px; /*Must Match banner Image height*/
    }

    .custom-card {
        height: 475px;
        border-radius: 10px;
    }

    .custom-center {
        text-align: center;
        margin: auto;
    }

    .custom-button {
        text-decoration: none;
        background-color: #7523B0;
        color: white;
        padding: 8px 18px 8px 18px;
        border: none;
        border-radius: 4px;
    }

        .custom-button:hover {
            background-color: #FF3366;
            color: white;
        }

        .custom-button:visited {
            text-decoration: none;
            color: white;
        }

    .custom-link {
        color: #7523B0;
        font-weight: 500;
        font-size: 14px;
    }

        .custom-link:hover {
            color: #FF3366;
            font-weight: 500;
            font-size: 14px;
        }
</style>

<div class="container">

    <div class="bannerImage">

        <div class="row custom-row m-2 align-items-center my-auto">
            <div class="card opacity-75 custom-card col-md-3 m-5">
                <h1 class="text-dark m-2">Sign Up</h1>
                <div class="card-body m-3">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group m-1">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group m-1">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group m-1">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group m-1">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group m-1">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2 custom-center">
                            <input type="submit" value="Create" class="custom-button m-3" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }

    </div>
</div>




