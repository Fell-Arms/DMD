<script>
        var currentZoom = 1.0;

        function zoomOut() {
            if(currentZoom >= .6){
                $(".zoomable").animate({ 'zoom': currentZoom -= .1 }, 'fast');
                if(currentZoom == 1){
                    $("#zoomLabel").text("")
                }
                else{
                    $("#zoomLabel").text("Zoom:" + Math.round(currentZoom * 100) + "%");
                }
            }
        }

        function zoomIn() {
            if (currentZoom <= 1.5) {
                $(".zoomable").animate({ 'zoom': currentZoom += .1 }, 'fast');
                if (currentZoom == 1) {
                    $("#zoomLabel").text("")
                }
                else {
                    $("#zoomLabel").text("Zoom:" + Math.round(currentZoom * 100) + "%");
                }
            }
        }

        function closeNav() {
            $("#navbar").animate({ height: "0px" });
