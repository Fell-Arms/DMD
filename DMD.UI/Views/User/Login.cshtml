@model DMD.BL.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container{
        margin:0;
        padding:0;
    }
    .bannerImage{
        width:100vw;
        height:600px;
        background-image: url('../../img/moon.jpg');
        background-size: cover;
    }
    .custom-card{
        height:200px;
    }
    #clouds{
        float: right;
        margin-bottom:50px;
    }
    #left{
        float: left;
        width: 500px;
        padding-bottom:100px;
    }

</style>

<div class="container">

        <div class="bannerImage">
    
            <div class="row m-2">
                <div class="card opacity-75 custom-card col-md-3">
                        <form asp-action="Login">
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                          <div class="form-group">
                                <label asp-for="UserName" class="opacity-100control-label"></label>
                               <input asp-for="UserName" class="opacity-100 form-control" />
                                <span asp-validation-for="UserName" class="opacity-100text-danger"></span>
                          </div>
                          <div class="form-group">
                               <label asp-for="Password" class="control-label"></label>
                               <input type="password" asp-for="Password" class="form-control" />
                               <span asp-validation-for="Password" class="text-danger"></span>
                          </div>
                          <div class="form-group mt-2">
                               <input type="submit" value="Login" class="btn btn-primary" />
                          </div>
                     </form>
                </div>
            </div>
        </div>

